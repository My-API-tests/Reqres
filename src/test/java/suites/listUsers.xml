<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="List users">
    <listeners>
        <listener class-name="org.qa.listener.TestListener"/>
    </listeners>

    <test name="Tests retrieving the list of users providing a correct page ID">
        <classes>
            <class name="ListUsersTest">
                <methods>
                    <include name="correctPageId"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Tests retrieving the list of users providing an incorrect page ID">
        <classes>
            <class name="ListUsersTest">
                <methods>
                    <include name="incorrectPageId"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>